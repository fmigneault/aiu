# .editorconfig
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Override settings for setup.cfg
[setup.cfg]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false  # must be preserved to do bump changelog parsing correctly
